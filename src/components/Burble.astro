<script type='module'>
  'use strict';
  window.addEventListener('DOMContentLoaded', () => {
    const burble = document.querySelector('.fab');
    const modal = document.querySelector('.chat-modal');
    const chatBox = document.querySelector('.chat-box');
    const closeBtn = document.querySelector('.close-chat');

    burble.addEventListener('click', () => {
      modal.style.display = 'block';
    });

    closeBtn.addEventListener('click', () => {
      modal.style.display = 'none';
    });

    // Cierre al hacer clic fuera del chat-box
    document.addEventListener('click', (event) => {
      const isClickInsideChat = chatBox.contains(event.target);
      const isClickOnFab = burble.contains(event.target);

      if (!isClickInsideChat && !isClickOnFab) {
        modal.style.display = 'none';
      }
    });
  });
</script>

